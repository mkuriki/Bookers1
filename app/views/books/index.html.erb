<body>
        <h1>Books</h1>
        <table>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </tr>
            <tbody>
                <% @books.each do |list| %>
                    <tr>
                         <td><%= list.title %></td>
                         <td><%= list.body %></td>
                         <td><%= link_to "Show", book_path(list.id) %></td>
                         <td><%= link_to "Edit", edit_book_path(list.id) %></td>
                         <td><%= link_to "Destroy", destroy_book_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        
        
        <% if @book.errors.any? %>
                <%= @book.errors.count %>件のerrorが発生しました 
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                  <% end %>
                </ul>
        <% end %>  
        
        <h2>New Book</h2>
        
        <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <div class = field><%= f.text_field :title %></div>
            <h4>Body</h4>
            <div class = field><%= f.text_area :body %></div>
            <div class = actions><%= f.submit 'Create Book' %></div>
    　  <% end %>  
</body>