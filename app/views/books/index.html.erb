
<body>
    <h1>Books</h1>
    
    <table>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
            
        </tr>
        <tbody>
         <% @lists.each do |list| %>
         
             <tr>
                 <td class="books-title"><%= link_to list.title, books_path(list.id) %></td>
                 <td class="books-body"><%= link_to list.body,books_path(list.id) %></td>
             </tr>
         <% end %>
         
        </tbody>
    </table>
    
</body>