<p id = "notice"><%= flash[:notice] %></p>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました 
        <ul>
          <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
          <% end %>
        </ul>
<% end %> 

<%= form_with model: @book, url: update_book_path(@book.id) do |f| %>
     <h4>Title</h4>
     <div class = field><%= f.text_field :title %></div>
     <h4>Body</h4>
     <div class = field><%= f.text_area :body %></div>
     <div class = actions><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to "Show", book_path(@book) %>
